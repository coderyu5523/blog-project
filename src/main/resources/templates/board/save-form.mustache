{{> layout/header}}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6">
            <div class="div-layout">
                <div class="div-header d-flex justify-content-between">
                    <h3><b>스포츠</b></h3>
                    <form action="/boards/sports" method="get" class="justify-content-end">
                        <button class="btn btn-outline-primary">더보기</button>
                    </form>
                </div>
                <div class="div-announcement fixed-height">
                    <table class="table table-hover" style="text-align: center">
                        <tr>
                            <th>번호</th>
                            <th>제목</th>
                            <th>작성일</th>
                        </tr>
                        {{#sportsDTOs}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{title}}</td>
                                <td>{{createdAt}}</td>
                            </tr>
                        {{/sportsDTOs}}
                    </table>
                </div>
            </div>
        </div>
